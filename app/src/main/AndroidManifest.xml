<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pradipatle.androidkt">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_android"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainHomeAcitity"
            android:screenOrientation="portrait"
            android:label="Technology"/>

        <activity
            android:name=".Android.AndroidActivity"
            android:screenOrientation="portrait"
            android:label="Android Interview Q &amp; A ">

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".MainHomeAcitity" />

        </activity>

        <activity
            android:name=".Java.JavaActivity"
            android:screenOrientation="portrait"
            android:label="JAVA Interview Q &amp; A ">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainHomeAcitity" />

        </activity>


    </application>

</manifest>